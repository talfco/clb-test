<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cloudburo App Platform Load Test Suite">
  <parameter name="testfile" value="fullload" />
  <!-- beforeSuite hat alle load Klassen -->
  <test name="Loading Customers" preserve-order="true">
    <parameter name="listvalue1" value="surname" />
    <parameter name="listvalue2" value="name" />
    <parameter name="collection" value="customers" /> 
    <parameter name="url" value="#customers" />  
    <parameter name="dbobject" value="com.cloudburo.test.dataobj.CustomerDBObject" />
    <classes>
      <class name="com.cloudburo.test.TestDriver">
        <methods>
          <include name="beforeSuite"/>
        </methods>
      </class> 
    </classes>
  </test>
</suite> 
